{
  "name": "react-express-boilerplate",
  "description": "A React Express Webpack Boilerplate to get started to development.",
  "version": "0.0.1",
  "main": "./server.js",
  "author": "Hiten Sharma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/htadg/react-express-boilerplate"
  },
  "homepage": "https://github.com/htadg/react-express-boilerplate",
  "keywords": [
    "react",
    "webpack",
    "express",
    "hot reloading",
    "react-hot-reloader",
    "starter",
    "boilerplate",
    "babel"
  ],
  "scripts": {
    "start": "nodemon server.js",
    "start:prod": "better-npm-run start-prod",
    "build:prod": "better-npm-run build-prod"
  },
  "betterScripts": {
    "start-prod": {
      "command": "webpack -p && node server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 3000
      }
    },
    "build-prod": {
      "command": "webpack --verbose --colors --display-error-details --config webpack.config.js -p && cp -r assets/* dist/",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 3001
      }
    }
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bcrypt": "^1.0.2",
    "better-npm-run": "^0.0.15",
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.2",
    "file-loader": "^0.11.2",
    "handlebars": "^4.0.10",
    "hbs": "^4.0.1",
    "jsonwebtoken": "^7.4.1",
    "material-ui": "^0.18.6",
    "mongoose": "4.10.8",
    "nodemailer": "^4.0.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-responsive": "^1.3.0",
    "react-router": "^3.0.5",
    "react-tap-event-plugin": "^2.0.1",
    "sendmail": "^1.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "morgan": "^1.8.2",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^1.3.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.5.0",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-dev-server": "^2.4.5",
    "webpack-hot-middleware": "^2.18.0"
  }
}
